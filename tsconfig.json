{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "incremental": true,
    "diagnostics": false,
    "moduleResolution": "Node16",
    "declaration": true,
    // "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "lib",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2020.promise",
      "dom"
    ]
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "experimentalResolver": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "doc"
  ]
}