{
  "name": "@restorecommerce/facade-srv",
  "version": "0.1.6",
  "description": "Restorecommerce facade service",
  "main": "dist/start.js",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/facade-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "facade",
    "srv"
  ],
  "dependencies": {
    "@restorecommerce/cluster-service": "^0.1.4",
    "@restorecommerce/logger": "^0.6.4",
    "@restorecommerce/service-config": "^0.4.1",
    "bcryptjs": "^2.4.3",
    "cross-env": "^7.0.3",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.23.0",
    "eslint-plugin-prefer-arrow-functions": "^3.0.1",
    "jest": "^26.6.3",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.1",
    "rimraf": "^3.0.0",
    "should": "^13.2.3",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "build": "npm-run-all lint build:clean build:tsc",
    "build:clean": "rimraf dist",
    "build:tsc": "tsc -d",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "dev": "cross-env NODE_ENV=development nodemon --watch './src/**/*.ts' --exec 'ts-node' src/index.ts",
    "libs": "run-s libs:clean libs:install libs:build",
    "libs:build": "cd libs && npm run build",
    "libs:clean": "cd libs && git clean -dfX",
    "libs:install": "cd libs && npm install",
    "lint": "eslint src --ext .ts",
    "start": "node dist/index.js",
    "test": "jest"
  },
  "engines": {
    "node": ">= 12.0.0"
  }
}
