{
  "name": "@restorecommerce/facade-srv",
  "version": "1.6.6",
  "description": "Restorecommerce facade service",
  "exports": "./lib/start.js",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/facade-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "facade",
    "srv"
  ],
  "type": "module",
  "dependencies": {
    "@restorecommerce/facade": "^2.3.1",
    "@restorecommerce/logger": "^1.3.8",
    "@restorecommerce/service-config": "^1.1.7",
    "yamlparser": "^0.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@restorecommerce/dev": "^0.2.0",
    "@semantic-release-plus/docker": "^3.1.3",
    "@types/node": "24.10.0",
    "@types/supertest": "^6.0.2",
    "cross-env": "^10.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.27.3",
    "eslint": "9.39.1",
    "eslint-plugin-file-extension-in-import-ts": "2.1.1",
    "eslint-plugin-prefer-arrow-functions": "3.9.1",
    "eslint-plugin-unicorn": "62.0.0",
    "nodemon": "3.1.11",
    "npm-run-all": "^4.1.5",
    "rimraf": "6.1.2",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "5.9.3",
    "yaml": "^2.8.2"
  },
  "scripts": {
    "start": "node ./lib/start.cjs",
    "build": "npm-run-all lint build:clean build:es",
    "build:clean": "rimraf lib",
    "build:es": "node esbuild.mjs",
    "dev": "cross-env NODE_ENV=development nodemon --watch './src/**/*.ts' --exec node --loader ts-node/esm ./src/start.ts",
    "lint": "eslint src",
    "test": "cross-env NODE_ENV=test vitest run",
    "postinstall": "rm -rf ./node_modules/@josephg/resolvable/index.ts"
  },
  "engines": {
    "node": ">= 22.11.0"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release-plus/docker",
        {
          "name": "docker.io/restorecommerce/facade-srv",
          "skipLogin": true
        }
      ],
      [
        "@semantic-release-plus/docker",
        {
          "name": "ghcr.io/restorecommerce/facade-srv",
          "skipLogin": true
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
