{
  "name": "@restorecommerce/facade-srv",
  "version": "1.4.1",
  "description": "Restorecommerce facade service",
  "exports": "./lib/start.js",
  "author": "n-fuse GmbH",
  "repository": {
    "type": "git",
    "url": "https://github.com/restorecommerce/facade-srv.git"
  },
  "license": "MIT",
  "keywords": [
    "restore",
    "commerce",
    "microservice",
    "facade",
    "srv"
  ],
  "type": "module",
  "dependencies": {
    "@apollo/federation": "^0.38.1",
    "@apollo/gateway": "2.9.3",
    "@restorecommerce/facade": "2.2.7",
    "@restorecommerce/logger": "^1.3.2",
    "@restorecommerce/service-config": "^1.0.16",
    "yamlparser": "^0.0.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@jest/globals": "^29.7.0",
    "@restorecommerce/dev": "0.0.13",
    "@semantic-release-plus/docker": "^3.1.3",
    "@types/jest": "29.5.14",
    "@types/node": "22.9.0",
    "@types/supertest": "^6.0.2",
    "c8": "^10.1.2",
    "coveralls": "^3.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "0.24.0",
    "eslint": "9.15.0",
    "eslint-plugin-file-extension-in-import-ts": "2.1.1",
    "eslint-plugin-prefer-arrow-functions": "3.4.1",
    "eslint-plugin-unicorn": "56.0.0",
    "husky": "9.1.6",
    "jest": "^29.7.0",
    "nodemon": "3.1.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "29.2.5",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "5.6.3"
  },
  "scripts": {
    "start": "node lib/start.cjs",
    "build": "npm-run-all lint build:clean build:es",
    "build:clean": "rimraf lib",
    "build:es": "esbuild ./src/start.ts --bundle --platform=node --outfile=lib/start.cjs --tree-shaking=true --sourcemap=inline",
    "dev": "cross-env NODE_ENV=development nodemon --watch './src/**/*.ts' --exec node --loader ts-node/esm ./src/start.ts",
    "lint": "eslint src",
    "test": "NODE_OPTIONS=--experimental-vm-modules cross-env NODE_ENV=test jest --runInBand",
    "postinstall": "rm -rf ./node_modules/@josephg/resolvable/index.ts",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {}\""
  },
  "engines": {
    "node": ">= 20.8.0"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release-plus/docker",
        {
          "name": "docker.io/restorecommerce/facade-srv",
          "skipLogin": true
        }
      ],
      [
        "@semantic-release-plus/docker",
        {
          "name": "ghcr.io/restorecommerce/facade-srv",
          "skipLogin": true
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
