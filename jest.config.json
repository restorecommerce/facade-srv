{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "collectCoverage": true,
  "coverageReporters": [
    "json",
    "html",
    "lcov"
  ],
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.test.json"
    }
  },
  "testRegex": "test/.*\\.spec\\.ts",
  "moduleNameMapper": {
    "^jose/(.*)$": "<rootDir>/libs/packages/facade/node_modules/jose/dist/node/cjs/$1"
  }
}
